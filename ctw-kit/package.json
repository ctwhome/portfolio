{
  "name": "ctw-kit",
  "version": "1.0.31",
  "description": "Custom components and utilities for Svelte and TailwindCSS (DaisyUI)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./src/lib/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/lib/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build -c vite.lib.config.ts && svelte-package && publint",
    "preview": "vite preview",
    "prepublishOnly": "bun run build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "dependencies": {
    "resend": "^4.0.1",
    "svelte-french-toast": "^1.2.0",
    "theme-change": "^2.5.0",
    "vanilla-tilt": "^1.8.1"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.291",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.15.1",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "bun-types": "latest",
    "daisyui": "^4.12.23",
    "publint": "^0.2.12",
    "svelte": "^5.16.1",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "unplugin-icons": "^0.22.0",
    "vite": "^6.0.7"
  },
  "keywords": [
    "svelte",
    "components",
    "tailwindcss",
    "daisyui",
    "seo"
  ],
  "author": "ctwhome",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ctwhome/ctw-kit.git"
  },
  "bugs": {
    "url": "https://github.com/ctwhome/ctw-kit/issues"
  },
  "homepage": "https://github.com/ctwhome/ctw-kit#readme",
  "publishConfig": {
    "access": "public"
  }
}

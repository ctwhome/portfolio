{
  "name": "ctw-kit",
  "version": "1.0.36",
  "description": "Custom components and utilities for Svelte and TailwindCSS (DaisyUI)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./src/lib/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/lib/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "scripts": {
    "build": "vite build -c vite.lib.config.ts",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "svelte": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "daisyui": "^4.0.0"
  },
  "dependencies": {
    "svelte-french-toast": "^1.2.0",
    "theme-change": "^2.5.0",
    "vanilla-tilt": "^1.8.1"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.291",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "bun-types": "latest",
    "typescript": "^5.7.2",
    "unplugin-icons": "^0.22.0",
    "vite": "^6.0.7"
  },
  "keywords": [
    "svelte",
    "components",
    "tailwindcss",
    "daisyui",
    "seo"
  ],
  "author": "ctwhome",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ctwhome/ctw-kit.git"
  },
  "bugs": {
    "url": "https://github.com/ctwhome/ctw-kit/issues"
  },
  "homepage": "https://github.com/ctwhome/ctw-kit#readme",
  "publishConfig": {
    "access": "public"
  }
}
